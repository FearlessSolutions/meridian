<div class="modal fade" id="export-picker-modal" tabindex="-1" role="dialog" aria-labelledby="export-picker-modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header dialog-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <p class="modal-title">Export</p>
            </div>
            <div class="modal-body">
                <div id="layer-container">
                    <div id="layer-options-header" class="row">
                        <input type="checkbox" value="checkAll" class="layer-checkbox">
                        <div class="layer-name">Layer Name</div>
                        <div class="layer-source">Source</div>
                        <div class="record-count">Records</div>
                    </div>

                    <div id="layer-options" class="row list-container">
                        <!-- This gets filled in manually -->
                    </div>
                </div>
                <div id="export-container">
                    <div id="export-options-header" class="row">
                        <div class="layer-source">Export Options: </div>
                    </div>
                    <div id="export-options" class="list-container">
                        {{#each exports}}
                            <div id="export-{{this.id}}" class="radio">
                                <label>
                                    <input type="radio" name="exportOption" value="{{this.id}}">
                                    {{this.label}}
                                </label>
                            </div>
                        {{/each}}
                    </div>
                </div>
                <div id="extra-export-container">
                    <div id="extra-export-options-header" class="row">
                        <div class="layer-source">Additional Options: </div>
                    </div>
                    <div class="tab-content extra-export-fields">
                        {{#each exports}}
                            {{#if this.template}}
                                <div id="tab-{{this.id}}">{{{this.template}}}</div>
                            {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary pull-right">Export</button>
                        <button type="cancel" class="btn btn-default-secondary  pull-right">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>