<div class="modal fade" id="export-picker-modal" tabindex="-1" role="dialog" aria-labelledby="export-picker-modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header dialog-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <p class="modal-title">Export</p>
            </div>
            <div class="modal-body">
                <div class="row">



                    <div id="layer-options-container" class="col-md-5 divider">
                        <div id="layer-options-header" class="row">
                            <div class="col-md-5">
                                <input type="checkbox" value="checkAll" checked>
                                <div class="text-by-checkbox">Layer Name</div>
                            </div>
                            <div class="col-md-5">Source</div>
                        </div>

                        <div id="layer-options" class="row list-container">
                            <!-- This gets filled in manually -->
                        </div>
                    </div>


                    <div id="export-container" class="col-md-7">
                        <label id="export-header" >Export Options</label>
                        <div id="export-options" class="list-container tabbable tabs-left">
                            <ul class="nav nav-tabs">
                                {{#each exports}}
                                    <li><a href="#tab-{{this.id}}" data-toggle="tab">
                                        <input type="radio" name="exportOption" value="{{this.id}}">
                                        {{this.label}}
                                    </a></li>
                                {{/each}}
                            </ul>
                            <div id="extra-export-fields" class="tab-content">
                                {{#each exports}}
                                    <div id="tab-{{this.id}}" class="tab-pane">
                                        {{{this.template}}}
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>





                </div>


            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary pull-right">Export</button>
                        <button type="cancel" class="btn btn-default-secondary  pull-right">Cancel</button>
                        <p class="info-text pull-right"><span class="glyphicon glyphicon-info-sign"></span> Additional info here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>