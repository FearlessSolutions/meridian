<a href="#" id="Query" type="button" class="btn btn-default-icon" data-toggle="tooltip" data-placement="bottom" data-title="Query Tool" >
    <span class="glyphicon glyphicon-screenshot"></span>
</a>
<div id="QueryDialog" class="dialog fade" >
    <div class="dialog-dialog">
        <div class="dialog-content">
            <div class="dialog-header">
                <button type="button" class="close" data-dismiss="dialog" aria-hidden="true">&times;</button>
                <p class="dialog-title">Query Tool</p>
            </div>
            <div class="dialog-body">
                <form class="form-horizontal query-form">
                    <fieldset>
                        <table>
                            <tr>
                                <td></td>
                                <td>
                                    <div class="form-group diamond-top">
                                        <label class="control-label" for="query-location">Max Lat</label>
                                        <input id="query-location-maxLat" name="query-location-maxLat" type="text" placeholder="" class="form-control input-md">
                                    </div>
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group diamond-left">
                                        <label class="control-label" for="query-location">Min Lon</label>
                                        <input id="query-location-minLon" name="query-location-minLon" type="text" placeholder="" class="form-control input-md">
                                    </div>
                                </td>
                                <td class="diamond-middle">
                                    <a href="#" id="drawBBoxButton" type="button" class="btn btn-default-icon" data-placement="bottom" title="Draw BBox"><span class="glyphicon glyphicon-pencil"></span></a>
                                </td>
                                <td>
                                    <div class="form-group diamond-right">
                                        <label class="control-label" for="query-location">Max Lon</label>
                                        <input id="query-location-maxLon" name="query-location-maxLon" type="text" placeholder="" class="form-control input-md">
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <div class="form-group diamond-bottom">
                                        <label class="control-label" for="query-location-ia">Min Lat</label>
                                        <input id="query-location-minLat" name="query-location-minLat" type="text" placeholder="" class="form-control input-md">
                                    </div>
                                </td>
                                <td></td>
                            </tr>
                        </table>
                    </fieldset>
                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-5 control-label" for="query-name">Name</label>
                            <div class="col-sm-7">
                                <input id="query-name" name="query-name" type="text" class="form-control input-md">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-5 control-label" for="query-name">Justification</label>
                            <div class="col-sm-7">
                                <input id="query-justification" name="query-justification" type="text" class="form-control input-md">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-5 control-label" for="query-type">Data Source</label>
                            <div class="col-sm-7">
                                <select id="query-source" name="query-source" class="form-control">
                                    <option value="1">Option one</option>
                                    <option value="2">Option two</option>
                                    <option value="3">Option three</option>
                                    <option value="4">Option four</option>
                                    <option value="5">Option five</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default-text pull-right">Run</button>
                            <button type="cancel" class="btn btn-default-secondary  pull-right">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /.dialog-content -->
    </div><!-- /.dialog-dialog -->
</div><!-- /.dialog -->