<a href="#" id="uploadData" type="button" class="btn btn-default-icon">
    <span class="glyphicon glyphicon-upload"></span>
</a>
<div id="uploadDataDialog" class="dialog fade" >
    <div class="dialog-dialog">
        <div class="dialog-content">
            <div class="dialog-header">
                <button type="button" class="close" data-dismiss="dialog" aria-hidden="true">&times;</button>
                <p class="dialog-title">Upload File</p>
            </div>
            <div class="dialog-body">
                <form id="upload-form" class="form-horizontal" role="form">
                    <input id="file" type="file" name="uploadFile" accept="{{#each filetypes}}{{this.extension}},{{/each}}" style="display:none"> <!-- hidden file -->

                    <div class="form-group">
                        <label for="file" class="col-md-3 control-label">File</label>
                        <div class="col-md-9">
                            <div id="open-file" class="input-group">
                                <input id="dummy-file" type="text" class="input-large form-control" placeholder="Please select a geojson, kml, or csv file">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-folder-open"></span>
                            </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Classification</label>
                        <div class="col-md-9">
                            <select id="classification" class="input-group form-control input-large" form="upload-form">
                                {{#each classifications}}
                                    <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </form>

                <div class="row text-justify"><strong>By selecting 'Upload', you agree that everything is classified properly</strong></div>
            </div>

            <div class="dialog-footer text-right">
                <button id="upload-submit" type="submit" class="btn btn-primary">Upload</button>
                <button id="upload-cancel" type="cancel" class="btn btn-primary">Cancel</button>
            </div>
        </div><!-- /.dialog-content -->
    </div><!-- /.dialog-dialog -->
</div><!-- /.dialog -->
