<div id="heatmap" class="btn-group">
  <button id="heatToggle" type="button" class="btn btn-default-icon"><span class="glyphicon glyphicon-fire"></span></button>
  <button id="heatConfig" type="button" class="btn btn-default-icon dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
</div>

<div id="heatConfigDialog" class="dialog fade" >
    <div class="dialog-dialog">
        <div class="dialog-content">
            <div class="dialog-header">
                <button type="button" class="close" data-dismiss="dialog" aria-hidden="true">&times;</button>
                <p class="dialog-title">Heatmap</p>
            </div>
			<div class="dialog-body">
				<form class="form-horizontal heatmap-form">
					<p><b>Select Query Snapshot(s) to Heatmap</b></p>
					<select multiple id="snapshotList" class="multiselect form-control" multiple="multiple"></select>
					<button type="submit" class="btn btn-default-text pull-right">Save</button>
					<button type="cancel" class="btn btn-default-secondary pull-right">Cancel</button>
				</form>
			</div>
        </div>
    </div>
</div>
